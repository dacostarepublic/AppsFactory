<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :video_code %>
    <%= f.select :platform, options_for_select([["iOS", "ios"],["Android", "android"],["Blackberry", "blackberry"]]) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
